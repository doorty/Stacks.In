<%= form_tag password_resets_path, :method => :post do %>
  <div class="field span-5">
    <%= label_tag :email, nil %>
    <%= text_field_tag :email, nil, :class => "text span-5" %>
  </div>
   <div class="actions span-5 last">
	<%= submit_tag "Reset my password!", :class => "button gray large span-5 last" %>
   </div>
<% end %>